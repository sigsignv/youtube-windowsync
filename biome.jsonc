{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"files": {
		"includes": ["**/*.{ts,tsx}", "!.wxt/**/*.ts"],
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"useEditorconfig": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
